# J-Dep Analyzer Database Configuration
# Copy this file to .env and update values as needed

# =============================================================================
# Database Type
# =============================================================================
# Options: "sqlite" or "postgresql"
# - sqlite: Use local SQLite database (recommended for development)
# - postgresql: Use GCP CloudSQL PostgreSQL
JDEP_DB_TYPE=sqlite

# =============================================================================
# SQLite Configuration (when JDEP_DB_TYPE=sqlite)
# =============================================================================
# Path to SQLite database file
JDEP_DB_PATH=dependencies.db

# =============================================================================
# CloudSQL PostgreSQL Configuration (when JDEP_DB_TYPE=postgresql)
# =============================================================================
# CloudSQL instance connection name (format: project:region:instance)
# Example: my-gcp-project:us-central1:jdep-instance
JDEP_DB_HOST=

# Database name
JDEP_DB_NAME=jdep

# Database user
JDEP_DB_USER=

# Database password (optional if using IAM auth)
JDEP_DB_PASSWORD=

# =============================================================================
# GCP Authentication
# =============================================================================
# Path to GCP service account JSON key file
# Required for CloudSQL connections outside of GCP environment
JDEP_GCP_CREDENTIALS=
